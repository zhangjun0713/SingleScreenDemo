<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tv_page_hotel"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/icon_path_left_arrow"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/tv_hotel_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_page_hotel"
        android:background="@drawable/pic_my_hotel"
        android:clickable="true"
        android:focusable="true"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="10dp"
        android:text="酒店介绍"
        android:textColor="@android:color/white"
        android:textSize="25sp">

    </TextView>

    <TextView
        android:id="@+id/tv_hotel_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_hotel_1"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/tv_hotel_1"
        android:layout_toRightOf="@id/tv_hotel_1"
        android:background="@drawable/pic_goods_order"
        android:clickable="true"
        android:focusable="true"
        android:gravity="bottom|center_horizontal"
        android:nextFocusRight="@+id/tv_hotel_3"
        android:paddingBottom="10dp"
        android:text="酒水点单"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_hotel_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_hotel_1"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/tv_hotel_2"
        android:layout_toRightOf="@id/tv_hotel_2"
        android:background="@drawable/pic_news"
        android:clickable="true"
        android:focusable="true"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="10dp"
        android:text="新闻"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_hotel_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_hotel_1"
        android:layout_alignLeft="@id/tv_hotel_3"
        android:layout_alignStart="@id/tv_hotel_3"
        android:layout_toEndOf="@id/tv_hotel_2"
        android:layout_toRightOf="@id/tv_hotel_2"
        android:background="@drawable/pic_cost"
        android:clickable="true"
        android:focusable="true"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="10dp"
        android:text="消费记录"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_hotel_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_hotel_1"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/tv_hotel_3"
        android:background="@drawable/pic_weather"
        android:clickable="true"
        android:focusable="true"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="10dp"
        android:text="天气"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_hotel_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_hotel_1"
        android:layout_alignLeft="@id/tv_hotel_4"
        android:layout_alignStart="@id/tv_hotel_4"
        android:background="@drawable/pic_multi_screen"
        android:clickable="true"
        android:focusable="true"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="10dp"
        android:text="多屏互动"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_hotel_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_hotel_1"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/tv_hotel_4"
        android:layout_toRightOf="@id/tv_hotel_4"
        android:background="@drawable/pic_theme"
        android:clickable="true"
        android:focusable="true"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="10dp"
        android:text="主题"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_hotel_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_hotel_1"
        android:layout_alignLeft="@id/tv_hotel_5"
        android:layout_alignStart="@id/tv_hotel_5"
        android:background="@drawable/pic_service_call"
        android:clickable="true"
        android:focusable="true"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="10dp"
        android:text="呼叫服务"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/iv_white_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_hotel_1"
        android:layout_alignStart="@id/tv_hotel_1"
        android:layout_alignTop="@id/tv_hotel_1"
        android:background="@drawable/white_border"
        android:visibility="gone" />

</RelativeLayout>